
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Items JSONL Schema",
  "type": "object",
  "properties": {
    "bundle_id": {"type": "string"},
    "scenario": {"type": "string"},
    "file_path": {"type": "string"},
    "file_type": {"type": "string"},
    "doc_id": {"type": "string"},
    "variant": {"type": "string"},
    "text": {"type": "string"},
    "pii_spans": {
      "type": "array",
      "items": {"type": "object",
        "properties": {"type":{"type":"string"},"start":{"type":"integer"},"end":{"type":"integer"}},
        "required": ["type","start","end"]
      }
    },
    "decoy_spans": {
      "type": "array",
      "items": {"type": "object"}
    },
    "blocks_meta": {
      "type": "array",
      "items": {"type": "string"}
    },
    "meta": {"type": "object"}
  },
  "required": ["bundle_id","scenario","file_path","file_type","doc_id","variant","text","pii_spans","decoy_spans","blocks_meta","meta"]
}
